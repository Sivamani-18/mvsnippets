{
	"name": "mvsnippets",
	"displayName": "MV Front End Dev Snippets",
	"description": "",
	"version": "0.0.6",
	"publisher": "Sivasubramaniyam",
  	"icon": "images/mindwave-logo.png",
  	"keywords": [
   		"snippets",
    	"css-snippets",
    	"html-snippets",
    	"javascript",
		"ApostropheCMS",
		"Apostrophe",
		"Nunjucks"
  	],
  	"license": "MIT",

	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Snippets"
	],
	"activationEvents": [
		"onCommand:mvsnippets.dev"
	],
	"extensionKind": [
		"ui",
		"workspace"
	  ],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mvsnippets.dev",
				"title": "MV snippet search"
			}
		],
		"keybindings": [
			{
			  "command": "mvsnippets.dev",
			  "key": "ctrl+alt+r",
			  "mac": "shift+cmd+r",
			  "when": "editorTextFocus"
			}
		  ],
			"snippets": [
			{
				"language": "css",
				"path": "./snippets/csssnippets.json"
			},
			{
				"language": "html",
				"path": "./snippets/csssnippets.json"
				},
			{
				"language": "html",
				"path": "./snippets/htmlsnippets.json"
			},
			{
				"language": "javascript",
				"path": "./snippets/htmlsnippets.json"
				},
				{
				"language": "javascriptreact",
				"path": "./snippets/htmlsnippets.json"
				},
				{
				"language": "typescript",
				"path": "./snippets/htmlsnippets.json"
				},
				{
				"language": "typescriptreact",
				"path": "./snippets/htmlsnippets.json"
				},
			{
				"language": "javascript",
				"path": "./snippets/jssnippets.json"
				},
				{
				"language": "javascriptreact",
				"path": "./snippets/jssnippets.json"
				},
				{
				"language": "typescript",
				"path": "./snippets/jssnippets.json"
				},
				{
				"language": "typescriptreact",
				"path": "./snippets/jssnippets.json"
				},
				{
				"language": "typescript",
				"path": "./snippets/tssnippets.json"
				},
				{
				"language": "typescriptreact",
				"path": "./snippets/tssnippets.json"
				},
				{
					"language": "javascript",
					"path": "./snippets/apostrophecms/schemas.json"
				},
				{
					"language": "javascript",
					"path": "./snippets/apostrophecms/misc.json"
				},
				{
					"language": "html",
					"path": "./snippets/apostrophecms/html.json"
				}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
